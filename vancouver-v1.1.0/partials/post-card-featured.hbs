<article class="feed feed-featured {{post_class}}" style="background-color: {{primary_tag.accent_color}};" data-month="{{date format="MMMM YYYY"}}">
    <a class="feed-featured-link {{#if @custom.cover_horizontal}}feed-horizontal{{/if}}" href="{{url}}" aria-label="{{title}}">
        <div class="feed-featured-wrapper">
            {{!-- {{#if primary_tag}}
                <p class="feed-tag">{{primary_tag.name}}</p>
            {{/if}} --}}
            <div class="feed-visibility feed-visibility-{{visibility}}">
                {{> icons/star}}
                {{visibility}}-only post
            </div>
            <h2 class="feed-featured-title">{{title}}</h2>
            <div class="vertical-line"></div>
            {{#if excerpt}}
                <div class="feed-featured-excerpt truncate-text line-3">{{excerpt words="20"}}</div>
            {{/if}}
        </div>
        {{#if feature_image}}
            <figure class="feed-featured-image">
                <img
                    srcset="{{img_url feature_image size="m" format="webp"}} 750w,
                            {{img_url feature_image size="l" format="webp"}} 960w"
                    sizes="{{#if imageSizes}}{{imageSizes}}{{else}}600px{{/if}}"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                    class="u-object-fit"
                >
            </figure>
        {{/if}}
    </a>
</article>