<article class="feed {{post_class}}" data-month="{{date format="MMMM YYYY"}}">
    <a class="feed-link" href="{{url}}" aria-label="{{title}}">
        {{#if feature_image}}
            <figure class="feed-image">
                <img
                    srcset="{{img_url feature_image size="s" format="webp"}} 400w,
                            {{img_url feature_image size="m" format="webp"}} 750w,"
                    sizes="{{#if imageSizes}}{{imageSizes}}{{else}}320px{{/if}}"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                    class="u-object-fit"
                >
            </figure>
        {{else}}
            <figure class="feed-image">
                <div class="u-placeholder square"></div>
            </figure>
        {{/if}}
        <div class="feed-wrapper">
            <div class="feed-eye-brown">
                <div class="feed-visibility feed-visibility-{{visibility}}">
                    {{> icons/star}}
                </div>
                {{#if primary_tag}}
                    <p class="feed-tag">{{primary_tag.name}}</p>
                {{/if}}
            </div>
            <h2 class="feed-title">{{title}}</h2>
            {{#if excerpt}}
                <div class="feed-excerpt truncate-text line-3">{{{excerpt words="20"}}}</div>
            {{/if}}
        </div>
    </a>
</article>