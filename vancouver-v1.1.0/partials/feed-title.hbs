<header class="feed-header">
    <div class="feed-header-wrapper">
        <h2 class="feed-header-title">{{title}}</h2>
        <div class="line-horizontal"></div>
        {{#if view_all}}
            <a class="link-view-all button button-text" href="{{url}}">
                <span class="link-label">View all</span>
                {{> icons/arrow-right}}
            </a>
        {{/if}}
    </div>
</header>